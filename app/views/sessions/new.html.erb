<%
	@login_param = Merb::Plugins.config[:"merb-auth"][:login_param]
	@password_param = Merb::Plugins.config[:"merb-auth"][:password_param]
%>

<form method="POST" action="<%= slice_url(:login) %>">
	<fieldset>
		<label for="<%= @login_param %>_field">Login</label>
		<input type="text" name="<%= @login_param %>" id="<%= @login_param %>_field" />
		
		<label for="<%= @password_param %>_field">Password</label>
		<input type="password" name="<%= @password_param %>" id="<%= @password_param %>_field" />
	</fieldset>
	<fieldset class="buttons">
		<input type="submit" value="Log in" />
	</fieldset>
</form>