<%
	@login_param = Merb::Authentication::Strategies::Basic::Base.login_param
	@password_param = Merb::Authentication::Strategies::Basic::Base.password_param
	@return_to_param = MerbAuthSliceFullfat[:return_to_param]
%>

<form method="POST" action="<%= slice_url(:sessions, :return_to=>params[@return_to_param]) %>" class="session">
	<fieldset>
		<label for="<%= @login_param %>_field">Login</label>
		<input type="text" name="<%= @login_param %>" id="<%= @login_param %>_field" />
		
		<label for="<%= @password_param %>_field">Password</label>
		<input type="password" name="<%= @password_param %>" id="<%= @password_param %>_field" />
	</fieldset>
	<fieldset class="buttons">
		<input type="submit" value="Log in" />
	</fieldset>
</form>